---
import Main from '@/layouts/Main.astro';

// component script
const profilePicture = 'https://i.imgur.com/JPGFE75.jpg';
---

<!-- component template -->
<Main title="Homepage">
	<div class="profile">
		<img
			class="profile-picture"
			width="100"
			height="100"
			src={profilePicture}
			alt="profile picture"
		/>
		<div class="profile-details">
			<h1>Frau Katarina</h1>
			<h2>VP of Engineering at Acme.com</h2>
			<p>
				Lorem ipsum dolor sit amet, consectetur adipisicing elit.
				Debitis, iste perferendis. Esse necessitatibus quaerat
				voluptatem? Doloribus eveniet ipsa maiores natus pariatur quos
				saepe! Consequuntur in ipsa, libero nemo sequi sunt.
			</p>
		</div>
	</div>
</Main>

<style>
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem;
	}

	.profile-picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}

	.profile-details {
		flex: 1 0 300px;

		& > h1 {
			margin-top: 0;
		}
	}
</style>
