---
import ThemeToggler from './ThemeToggler.astro';
---

<nav class="container">
	<ul>
		<li>
			<a href="/">Home</a>
		</li>
		<li>
			<a href="/philosophies">Philosophies</a>
		</li>
		<li>
			<a href="/beyond-technology">Beyond technology</a>
		</li>
	</ul>

	<ThemeToggler />
</nav>

<style>
	nav {
		display: flex;
		align-items: flex-start;
		padding: 2rem 0;
	}

	ul {
		display: flex;
		flex-wrap: wrap;
		padding: 0;
		margin: 0 auto 0 0;
	}

	li {
		opacity: 0.8;
		list-style: none;
		font-size: 0.95rem;
	}

	a {
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		text-decoration: none;
		color: var(--text-secondary);

		&:hover {
			color: var(--text-primary);
			opacity: 1;
			background: var(--background-a1);
		}
	}
</style>
